@{
    Layout = "_Layout";
}

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up</title>
    <link rel="stylesheet" href="~/lib/assets/css/main/app.css" />
    <link rel="stylesheet" href="~/lib/assets/css/pages/auth.css" />
    <link rel="shortcut icon"
          href="~/lib/assets/images/logo/favicon.svg"
          type="image/x-icon" />
    <link rel="shortcut icon"
          href="~/lib/assets/images/logo/favicon.png"
          type="image/png" />
    <style>
        body,
        html {
            height: 100%;
        }

        body {
            background-color: #cfcfcf;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        #auth {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }

        .auth-card {
            min-width: 500px;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #ffff;
        }

        .auth-logo {
            text-align: center;
            margin-bottom: 10px;
            margin-top: 10px;
        }

        .auth-title {
            text-align: center;
            font-size: 24px;
            margin-bottom: 10px;
        }

        .auth-subtitle {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-control-icon {
            position: absolute;
            top: 50%;
            margin-left: 5px;
            transform: translateY(-55%);
            color: #ccc;
        }

        .form-group {
            position: relative;
        }

        .form-control {
            padding-left: 40px;
        }

        .btn-block {
            width: 100%;
        }

        .text-center {
            text-align: center;
        }
    </style>
</head>

<body>
    <div id="auth">
        <div class="auth-card">
            <div class="auth-logo">
                <a href="index.html">
                    <img src="https://www.metrodataacademy.id/static/media/logo_metrodata_academy.f40277dc.svg"
                         alt="Logo"
                         width="150px" />
                </a>
            </div>
            <h1 class="auth-title">Sign Up</h1>
            <p class="auth-subtitle mb-5">
                Input your data to register to our website.
            </p>

            <form action="index.html">
                <div class="form-group position-relative has-icon-left mb-3">
                    <div class="form-control-icon">
                        <i class="bi bi-envelope"></i>
                    </div>
                    <input type="text"
                           class="form-control form-control-md"
                           placeholder="Email" />
                </div>
                <div class="form-group position-relative has-icon-left mb-3">
                    <div class="form-control-icon">
                        <i class="bi bi-person"></i>
                    </div>
                    <input type="text"
                           class="form-control form-control-md"
                           placeholder="Username" />
                </div>
                <div class="form-group position-relative has-icon-left mb-3">
                    <div class="form-control-icon">
                        <i class="bi bi-shield-lock"></i>
                    </div>
                    <input type="password"
                           class="form-control form-control-md"
                           placeholder="Password" />
                </div>
                <div class="form-group position-relative has-icon-left mb-3">
                    <div class="form-control-icon">
                        <i class="bi bi-shield-lock"></i>
                    </div>
                    <input type="password"
                           class="form-control form-control-md"
                           placeholder="Confirm Password" />
                </div>
                <button class="btn btn-primary btn-block btn-md shadow-lg mt-4">
                    Sign Up
                </button>
            </form>
            <div class="text-center mt-5 text-md fs-6">
                <p class="text-gray-600">
                    Already have an account?
                    <a href="/Home/Login" class="font-bold">Log in</a>.
                </p>
            </div>
        </div>
    </div>
</body>