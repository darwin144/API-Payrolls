@model IEnumerable<Client.Models.Employee>

@{
	ViewData["Title"] = "Employee";
	Layout = "_SidebarLayout";
}

<div id="main">
	<header class="mb-3 ">
		<a href="#" class="burger-btn d-block d-xl-none">
			<i class="bi bi-justify fs-3"></i>
		</a>
	</header>

	<div class="page-heading">
		<div class="page-title">
			<div class="row">
				<div class="col-12 col-md-6 order-md-1 order-last">
					<h3>List Employee</h3>
					<p class="text-subtitle text-muted">
						Manager Employee Data
					</p>
				</div>
				<div class="col-12 col-md-6 order-md-2 order-first">
					<nav aria-label="breadcrumb"
						 class="breadcrumb-header float-start float-lg-end">
						<ol class="breadcrumb">
							<li class="breadcrumb-item">
								<a href="index.html">Dashboard</a>
							</li>
							<li class="breadcrumb-item active" aria-current="page">
								Employee
							</li>
						</ol>
					</nav>
				</div>
			</div>
		</div>
		<section class="section">
			<div class="card">
				<div class="">
					</br><a href="@Url.Action("Create","Admin")" class="btn btn-primary float-end me-4" data-toggle="modal" data-target="#modalTambah">
						Add Employee
					</a>
				</div>

				<div class="card-body">
					@*<p><a href="/Employee/Create"></a>Create</p>*@
					<table class="table table-striped" id="table1">
						<thead>
							<tr>
								<th>
									@Html.DisplayNameFor(model => model.Id)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.FirstName)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.LastName)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.BirthDate)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Gender)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.HiringDate)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Email)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.PhoneNumber)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.ReportTo)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.EmployeeLevel_id)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Department_id)
								</th>
							</tr>
						</thead>
						@*						<tbody id="employee" class="align-middle text-center"></tbody>*@
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>
										@Html.DisplayFor(modelItem => item.Id)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.FirstName)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.LastName)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.BirthDate)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Gender)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.HiringDate)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Email)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.PhoneNumber)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.ReportTo)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.EmployeeLevel_id)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Department_id)
									</td>
									<td>
										@Html.ActionLink("Edit", "Edit", new {item.Id}) |
										@*										@Html.ActionLink("Get All Data", "GetAllEmployee", new { /* id=item.PrimaryKey */ }) |*@
										@Html.ActionLink("Delete", "Deletes", new { item.Id /* id=item.PrimaryKey */ })
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</section>
	</div>

	<footer>
		<div class="footer clearfix mb-0 text-muted mt-auto px-4">
			<div class="float-start text-sm">
				<p>2023 &copy;</p>
			</div>
			<div class="float-end text-sm">
				<p>
					Project MCC by
					<span class="text-danger">
						<i class="bi bi-heart-fill icon-mid"></i>
					</span>
					<a href="">Kelompok 4</a>
				</p>
			</div>
		</div>
	</footer>
</div>





